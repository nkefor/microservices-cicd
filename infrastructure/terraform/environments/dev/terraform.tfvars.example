# Example Terraform Variables
# Copy this file to terraform.tfvars and update with your values

aws_region  = "us-east-1"
project_name = "microservices-cicd"
environment = "dev"

vpc_cidr = "10.0.0.0/16"
availability_zones = ["us-east-1a", "us-east-1b"]

# SSH Configuration
# Generate key with: ssh-keygen -t rsa -b 4096 -f ~/.ssh/microservices-cicd
ssh_public_key = "ssh-rsa AAAAB3NzaC1yc2EAAAADAQABAAACAQC..." # Replace with your public key

# Security - Restrict SSH access to your IP
# Get your IP: curl https://checkip.amazonaws.com
allowed_ssh_cidr = ["YOUR_IP/32"] # Change from 0.0.0.0/0 for security

# Instance Configuration
jenkins_instance_type      = "t3.medium"  # 2 vCPU, 4 GB RAM
microservices_instance_type = "t3.small"   # 2 vCPU, 2 GB RAM
microservices_count        = 3             # Number of microservices servers
